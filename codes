<body>
<h1>Password Generator</h1>
<div class="container">
  <div class="controls">
    <label for="length">Password Length:</label>
    <input type="number" id="length" min="4" max="64" value="12"/>
    <button onclick="generatePassword()">Generate Password</button>
    <button onclick="copyPassword()">Copy</button>
    <button onclick="sendEmail()">Send via Email</button>
  </div>
  <div id="passwordDisplay">Your password will appear here</div>
  <div id="historyContainer">
    <h3>History</h3>
    <div id="history"></div>
  </div>
  <div id="notes">
    <h3>Notes</h3>
    <textarea id="notesArea" placeholder="Add your notes here..."></textarea>
    <button onclick="saveNotes()">Save Notes</button>
  </div>
</div>

<script>
  let currentPassword = "";
  let passwordHistory = [];
  let notes = "";

  function generatePassword() {
    const length = parseInt(document.getElementById('length').value) || 12;
    const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()_+~`|}{[]:;?><,./-=";
    let password = "";
    for (let i = 0; i < length; i++) {
      password += charset.charAt(Math.floor(Math.random() * charset.length));
    }
    currentPassword = password;
    document.getElementById('passwordDisplay').textContent = password;
    addToHistory(password);
  }

  function copyPassword() {
    if (currentPassword) {
      navigator.clipboard.writeText(currentPassword).then(() => {
        alert("Password copied to clipboard");
      });
    } else {
      alert("Generate a password first");
    }
  }

  function addToHistory(password) {
    passwordHistory.push(password);
    updateHistory();
  }

  function updateHistory() {
    const historyDiv = document.getElementById('history');
    historyDiv.innerHTML = "";
    for (let i = 0; i < passwordHistory.length; i++) {
      const item = document.createElement('div');
      item.className = 'history-item';
      item.textContent = passwordHistory[i];
      // Add copy on click
      item.onclick = () => {
        navigator.clipboard.writeText(passwordHistory[i]);
        alert("Password copied to clipboard");
      };
      historyDiv.appendChild(item);
    }
  }

  function sendEmail() {
    const email = prompt("Enter email address to send password:");
    if (email && currentPassword) {
      // For demo, we just open mail client
      window.location.href = `mailto:${email}?subject=Your%20Generated%20Password&body=${encodeURIComponent(currentPassword)}`;
    } else if (!currentPassword) {
      alert("Generate a password first");
    } else {
      alert("Please enter an email");
    }
  }

  function saveNotes() {
    notes = document.getElementById('notesArea').value;
    alert("Notes saved");
  }
</script>
</body>
</html>
